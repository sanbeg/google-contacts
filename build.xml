<project default="build">

  <property name="build.dir"   value="build"/>
  <property name="classes.dir" value="${build.dir}/classes"/>
  
  <path id="classpath">
    <fileset dir="/home/steve/src/google-contact/gdata/java/lib" 
	     includes="**/*.jar"/>
  </path>
  
  <target name="clean">
    <delete dir="build"/>
  </target>
  
  <target name="build">
    <mkdir dir="${classes.dir}"/>
    <javac srcdir="src" destdir="${classes.dir}" classpathref="classpath"/>
  </target>
  
  <target name="scan">
    <java classname="Scan"  classpath="${classes.dir}:../gdata/java/lib/*"/>
  </target>


  <target name="get">
    <java classname="ContactsToXML"  classpath="${classes.dir}:../gdata/java/lib/*"/>
  </target>
</project>
